<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#ff00"
        android:gravity="center"
        android:text="Danh sách vật tư"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:paddingTop="10dp"
        android:src="@drawable/folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="Mã vật tư"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/mavt"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:text="Mã vật tư"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="10dp"
            android:src="@drawable/supply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Tên vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tenvt"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Tên vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="10dp"
            android:src="@drawable/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Số lượng vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/soluongvt"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Số lượng vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="10dp"
            android:src="@drawable/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Đơn giá vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dongiavt"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Đơn giá vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:paddingTop="10dp"
            android:src="@drawable/notesupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Ghi chú vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ghichuvt"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Ghi chú vật tư"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>